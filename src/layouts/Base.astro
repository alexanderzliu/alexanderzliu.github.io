---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Alexander Liu', description = 'Personal site' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link href="/style.css?v=7" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <main class="wrap">
      <slot />
    </main>
    <ViewTransitions />
  </body>
  
</html>
